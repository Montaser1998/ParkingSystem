@implements IDisposable
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Parking System</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @* --- Links for ANY Logged-in User --- *@
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="parking">
                        <span class="bi bi-p-circle-fill-nav-menu" aria-hidden="true"></span> Parking Dashboard
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        @* --- Links for Users in the "Security" Role ONLY --- *@
        <AuthorizeView Roles="Security">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="issue-fine">
                        <span class="bi bi-cone-striped-nav-menu" aria-hidden="true"></span> Issue Fine
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

    </nav>
</div>


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

